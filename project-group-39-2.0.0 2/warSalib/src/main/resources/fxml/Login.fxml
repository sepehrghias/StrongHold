<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<Pane xmlns="http://javafx.com/javafx" fx:id="loginPane"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.LoginView"
      prefHeight="400.0" prefWidth="600.0">
    <TextField promptText="Username" layoutX="300" layoutY="120" prefHeight="30" prefWidth="100"  fx:id="loginUsername"/>
    <PasswordField promptText="Password" layoutX="300" layoutY="200" prefHeight="30" prefWidth="100" fx:id="loginPassword"/>
    <Button text="Forgot my password" layoutX="200" layoutY="280" onMouseClicked="#forgotPassword" />
    <Button text="Login" layoutX="300" layoutY="360" onMouseClicked="#goMainMenu" />
    <TextField promptText="Captcha" layoutY="280" layoutX="560" fx:id="loginCaptcha" />

</Pane>
