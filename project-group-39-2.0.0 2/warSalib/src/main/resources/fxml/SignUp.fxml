<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.signupview"
            prefHeight="400.0" prefWidth="600.0">
        <TextField promptText="Username" fx:id="signUpUsername" layoutX="100" layoutY="120" />
        <CheckBox text="Slogan" layoutX="400" layoutY="420" fx:id="sloganCheckBox"  onMouseClicked="#makeSloganTextField"/>
        <PasswordField promptText="Password" fx:id="signUpPassword" layoutX="100" layoutY="200" />
        <TextField promptText="Nickname" fx:id="signUpNickname" layoutX="100" layoutY="280" />
        <TextField promptText="Email"  fx:id="signUpEmail" layoutX="100" layoutY="360" />
        <TextField promptText="PasswordRecovery" fx:id="signUpPasswordRecovery" layoutX="100" layoutY="420" />
        <Button text="Sign Up"  layoutX="120" layoutY="480" onMouseClicked="#SignUp" />

</Pane>
